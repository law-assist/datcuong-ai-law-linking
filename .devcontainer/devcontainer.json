{
  // Dev container name
  "name": "AI law linking dev environment",
  // Base image for dev container
  "build": {
		"dockerfile": "Dockerfile",
		"options": ["--tag=ai-law-linking-dev"]
	},
  // Use GPU support
  "runArgs": [
    "--gpus=all"
  ],
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [8000],
  // Use 'postCreateCommand' to run command after container created.
  "postCreateCommand": [
    "nvidia-smi"
  ],
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "donjayamanne.python-environment-manager",
        "ms-python.debugpy",
        "eamodio.gitlens"
      ]
    }
  },
  "remoteUser": "root"
}